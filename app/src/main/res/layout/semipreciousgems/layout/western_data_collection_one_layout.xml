<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:orientation="vertical"
    android:layout_marginTop="40dp">


    <EditText
        android:id="@+id/data_collection_name_edit_text"
        android:hint="Enter your name"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <!--28.7041° N, 77.1025° E Delhi -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal">

        <Button
            android:text="Set Birth Date"
            android:textAllCaps="false"
            android:layout_margin="4dp"
            android:id="@+id/collect_info_date_picker_button"
            android:layout_width="0dp"
            android:textColor="#fff"
            android:background="@color/colorPrimary"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <Button
            android:text="Set Birth Time"
            android:textAllCaps="false"
            android:textColor="#fff"
            android:background="@color/colorPrimary"
            android:layout_margin="4dp"
            android:id="@+id/collect_info_time_picker_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

    </LinearLayout>

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/data_collection_date_text_view"
            android:text="00/00/0000"
            android:textAllCaps="false"
            android:gravity="center"
            android:textSize="24sp"
            android:layout_gravity="center"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/data_collection_time_text_view"
            android:text="00 : 00"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="24sp"
            android:textAllCaps="false"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

    </LinearLayout>


    <Button
        android:id="@+id/data_collection_submit_button"
        android:textColor="#fff"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="Go !"
        android:textAllCaps="false"
        android:background="@color/colorPrimary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>